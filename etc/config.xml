<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <esas_hutkigrosh>
                <debug>1</debug>
                <active>1</active>
                <title>Hutkigrosh</title>
                <model>HutkigroshGatewayFacade</model>
                <order_status>pending_payment</order_status>
                <can_authorize>0</can_authorize>
                <can_capture>0</can_capture>
                <can_void>0</can_void>
                <can_order>1</can_order>
                <payment_action>order</payment_action>
                <can_use_checkout>1</can_use_checkout>
                <can_use_internal>1</can_use_internal>
                <is_gateway>1</is_gateway>
                <hutkigrosh_shop_name>Magento2 shop</hutkigrosh_shop_name>
                <hutkigrosh_hg_login/>
                <hutkigrosh_hg_password/>
                <hutkigrosh_erip_id/>
                <hutkigrosh_sandbox>1</hutkigrosh_sandbox>
                <hutkigrosh_notification_email>1</hutkigrosh_notification_email>
                <hutkigrosh_notification_sms>0</hutkigrosh_notification_sms>
                <hutkigrosh_completion_text/>
                <hutkigrosh_bill_status_pending>pending_payment</hutkigrosh_bill_status_pending>
                <hutkigrosh_bill_status_payed>pending_payment</hutkigrosh_bill_status_payed>
                <hutkigrosh_bill_status_failed>pending_payment</hutkigrosh_bill_status_failed>
                <hutkigrosh_bill_status_canceled>pending_payment</hutkigrosh_bill_status_canceled>
                <sort_order>1</sort_order>
            </esas_hutkigrosh>
        </payment>
    </default>
</config>
